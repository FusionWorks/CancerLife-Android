            <!--android:layout_marginTop="10dp"-->
            <!--android:onClick="rememberMeClick"-->
            <!--android:layout_toLeftOf="@id/rememberMe"/>-->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:textSize="25dp"
            android:textColor="#fff"
            android:layout_below="@id/passField"
            android:background="@drawable/sign_in_button"
            android:text="Sign in"
            android:layout_centerHorizontal="true"
            android:onClick="signInClick"/>
        <Button
            android:id="@+id/regButton"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textColor="#fff"
            android:layout_below="@id/loginButton"
            android:background="@drawable/create_account_button"
            android:layout_centerHorizontal="true"
            android:text="Create account"
            android:onClick="registerClick"
            />
        <Button
            android:id="@+id/recoverView"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="Forgot your password?"
            android:textSize="25sp"
            android:textColor="#b9bdbe"
            android:onClick="recoverClick"
            android:layout_marginTop="25dp"
            android:layout_below="@id/regButton"
            android:layout_centerHorizontal="true"
            android:background="@drawable/light_gray_button"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loadingAnimationContent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#cccccccc"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/animationLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminate="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>