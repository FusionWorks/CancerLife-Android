<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="10dp">
    <Spinner
        android:id="@+id/reports"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:paddingLeft="10dp"
        android:textSize="25dp"
        android:textColor="#000"
        android:singleLine="true"
        android:lines="1"
        android:textAlignment="center"
        android:drawableRight="@drawable/drop_down_img"
        android:paddingRight="10dp"
        android:background="@android:drawable/btn_default"/>
    <Spinner
        android:id="@+id/reportsInterval"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:paddingLeft="10dp"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_alignParentRight="true"
        android:lines="1"
        android:textAlignment="center"
        android:drawableRight="@drawable/drop_down_img"
        android:background="@android:drawable/btn_default"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reports">
        <RelativeLayout
            android:id="@+id/reportsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/frequentSymptomsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frequently Reported Symptoms"
                android:textColor="#1e721e"
                android:textSize="20sp"/>
            <TableLayout
                android:id="@+id/frequentSymptoms"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_below="@id/frequentSymptomsText">
                <TableRow
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip">
                    <TextView
                        android:id="@+id/symptom"
                        android:textColor="#000000"
                        android:layout_weight="0.4"
                        android:text="Symptom"/>
                    <TextView
                        android:id="@+id/avgScore"
                        android:textColor="#000000"
                        android:layout_weight="0.4"
                        android:text="Avg Score"/>
                    <TextView
                        android:id="@+id/precent"
                        android:textColor="#000000"
                        android:layout_weight="0.2"
                        android:text="%"/>
                    </TableRow>
                </TableLayout>
            <TextView
                android:id="@+id/newSymptomsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Symptoms"
                android:layout_marginTop="15dp"
                android:textColor="#1e721e"
                android:textSize="20sp"
                android:layout_below="@id/frequentSymptoms"/>
            <TableLayout
                android:id="@+id/newSymptoms"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_below="@id/newSymptomsText">
                <TableRow
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip" >
                    <TextView
                        android:id="@+id/symptom"
                        android:textColor="#000000"
                        android:layout_weight="0.4"
                        android:text="Symptom"/>
                    </TableRow>
                </TableLayout>
            <TextView
                android:id="@+id/qualityOfLifeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quality Of Life"
                android:layout_marginTop="15dp"
                android:textColor="#1e721e"
                android:textSize="20sp"
                android:layout_below="@id/newSymptoms"/>
            <TableLayout
                android:id="@+id/qualityOfLife"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_below="@id/qualityOfLifeText">
                <TableRow
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip">
                    <TextView
                        android:id="@+id/current"
                        android:textColor="#000000"
                        android:layout_weight="0.33"
                        android:text="Current"/>
                    <TextView
                        android:id="@+id/previous"
                        android:textColor="#000000"
                        android:layout_weight="0.33"
                        android:text="Previous"/>
                    <TextView
                        android:id="@+id/change"
                        android:textColor="#000000"
                        android:layout_weight="0.33"
                        android:text="Change"/>
                    </TableRow>
                </TableLayout>

            </RelativeLayout>
        </ScrollView>
    <RelativeLayout
        android:id="@+id/graphicsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reports">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/graphic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/layoutMaster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/loadingAnimationContent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#cccccccc"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/animationLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>