<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <com.platforms.menu.SlideHolder
        android:id="@+id/slideHolder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <include
            android:id="@+id/leftMenu"
            android:layout_width="match_parent"
            layout="@layout/menu" />

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/topBar"
                android:layout_width="fill_parent"
                android:layout_height="55dp">
                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_logo"
                    android:text="menu"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:onClick="showMenu"/>
                <ImageButton
                    android:id="@+id/reloadButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/reload_arrow"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentRight="true"
                    android:onClick="reloadJournal"/>
                <TextView
                    android:id="@+id/topBarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:text="JOURNAL"
                    android:layout_toLeftOf="@id/reloadButton"
                    android:textColor="#2a9a11"
                    android:textSize="30sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/mainContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/topBar">
                <Button
                    android:id="@+id/postButton"
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="+ Post an entry"
                    android:onClick="toPostEntry"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:background="@drawable/post_entry_button"/>
                <ListView
                    android:id="@+id/journalList"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:scrollingCache="false"
                    android:cacheColorHint="#ffffff"
                    android:divider="#ffffffff"
                    android:layout_below="@id/postButton">
                    </ListView>

                </RelativeLayout>
            <RelativeLayout
                android:id="@+id/loadingAnimationContent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#cccccccc"
                android:visibility="gone">
                <ProgressBar
                    android:id="@+id/animationLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleLarge"
                    android:indeterminate="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </com.platforms.menu.SlideHolder>

</RelativeLayout>