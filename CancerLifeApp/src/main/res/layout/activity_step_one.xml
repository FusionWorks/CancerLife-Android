<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp">
            <RelativeLayout
                android:id="@+id/topBar"
                android:layout_width="fill_parent"
                android:layout_height="55dp">
                <ImageView
                    android:id="@+id/stepsButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/step1"/>
                <TextView
                    android:id="@+id/topBarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/stepsButtons"
                    android:text="NEW ENTRY"
                    android:textColor="#2a9a11"
                    android:textSize="30sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/middleContent"
                android:layout_below="@id/topBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mood_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What is your current mood?"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/mood_title"
                    android:background="#cccccc"/>
                <LinearLayout
                    android:id="@+id/moods"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/line">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/mood1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="5dp"
                            android:onClick="moodsClick"
                            android:background="@drawable/no_photo_available"/>
                        <ImageView
                            android:id="@+id/mood2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="5dp"
                            android:onClick="moodsClick"
                            android:background="@drawable/no_photo_available"/>
                        <ImageView
                            android:id="@+id/mood3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="20dp"
                            android:onClick="moodsClick"
                            android:background="@drawable/no_photo_available"/>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/mood4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="10dp"
                            android:onClick="moodsClick"
                            android:background="@drawable/no_photo_available"/>
                        <ImageView
                            android:id="@+id/mood5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:onClick="moodsClick"
                            android:background="@drawable/no_photo_available"/>
                        </LinearLayout>
                    </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bottomContent"
                android:layout_below="@id/middleContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mood_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you experiencing any symptoms?"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000"/>
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/mood_title"
                    android:background="#cccccc"/>
                <LinearLayout
                    android:id="@+id/symptoms"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/line">
                    <ImageView
                        android:id="@+id/symptom1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:onClick="sideEffectClick"
                        android:background="@drawable/no_photo_available"/>
                    <ImageView
                        android:id="@+id/symptom2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:onClick="sideEffectClick"
                        android:background="@drawable/no_photo_available"/>
                    <ImageView
                        android:id="@+id/symptom3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:onClick="sideEffectClick"
                        android:background="@drawable/no_photo_available"/>
                    </LinearLayout>
                </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bottomButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next: Select symptoms"
                    android:textColor="#fff"
                    android:textSize="23sp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:onClick="toSecondStep"
                    android:drawableRight="@drawable/right_angle"
                    android:paddingRight="10dp"
                    android:background="@drawable/post_entry_button"/>
                </RelativeLayout>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/loadingAnimationContent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#cccccccc"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/animationLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>