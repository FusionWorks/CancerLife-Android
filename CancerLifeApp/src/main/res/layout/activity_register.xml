<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_centerHorizontal="true">
            <EditText
                android:id="@+id/emailField"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:paddingLeft="15dp"
                android:textSize="25dp"
                android:textColor="#000"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:hint="Email"
                android:background="@drawable/top_edit_text"
                android:drawableRight="@drawable/email_small_logo"
                android:paddingRight="15dp"
                android:layout_centerHorizontal="true"/>
            <EditText
                android:id="@+id/passwordField"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:paddingLeft="15dp"
                android:inputType="textPassword"
                android:textSize="25dp"
                android:textColor="#000"
                android:singleLine="true"
                android:lines="1"
                android:hint="Password"
                android:background="@drawable/middle_edit_text"
                android:drawableRight="@drawable/lock_small_logo"
                android:paddingRight="18dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/emailField"/>
            <EditText
                android:id="@+id/confirmPasswordField"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:paddingLeft="15dp"
                android:inputType="textPassword"
                android:textSize="25dp"
                android:textColor="#000"
                android:singleLine="true"
                android:lines="1"
                android:hint="Confirm Password"
                android:background="@drawable/middle_edit_text"
                android:drawableRight="@drawable/lock_small_logo"
                android:paddingRight="18dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/passwordField"/>
            <EditText
                android:id="@+id/usernameField"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:paddingLeft="15dp"
                android:textSize="25dp"
                android:textColor="#000"
                android:singleLine="true"
                android:lines="1"
                android:hint="Username"
                android:background="@drawable/middle_edit_text"
                android:drawableRight="@drawable/person_small_logo"
                android:paddingRight="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/confirmPasswordField"/>

            <EditText
                android:id="@+id/firstNameField"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:paddingLeft="15dp"
                android:textSize="25dp"
                android:textColor="#000"
                android:singleLine="true"
                android:lines="1"
                android:hint="First name"
                android:background="@drawable/bottom_edit_text"
                android:drawableRight="@drawable/person_small_logo"
                android:paddingRight="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/usernameField"/>
            <RadioGroup
                android:id="@+id/maleFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/firstNameField">

                <RadioButton
                    android:id="@+id/radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male "
                    android:textColor="#000"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:text="Female "
                    android:textColor="#000"
                    android:layout_weight="1" />
            </RadioGroup>
            <RadioGroup
                android:id="@+id/patientType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/maleFemale">

                <RadioButton
                    android:id="@+id/patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient "
                    android:textColor="#000"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/survivor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:text="Survivor "
                    android:textColor="#000"
                    android:layout_weight="1" />
            </RadioGroup>
            <TextView
                android:id="@+id/selectedTime"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:paddingLeft="15dp"
                android:textSize="25dp"
                android:hint="Date of birth"
                android:textColor="#000"
                android:singleLine="true"
                android:lines="1"
                android:onClick="birthPicker"
                android:gravity="center_vertical"
                android:background="@drawable/top_edit_text"
                android:paddingRight="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/patientType"/>
            <EditText
                android:id="@+id/zipCode"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:paddingLeft="15dp"
                android:textSize="25dp"
                android:textColor="#000"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:lines="1"
                android:hint="Zip code"
                android:background="@drawable/middle_edit_text"
                android:paddingRight="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/selectedTime"/>
            <Spinner
                android:id="@+id/cancerType"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:paddingLeft="15dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bottom_edit_text"
                android:layout_below="@id/zipCode"/>
            <ProgressBar
                android:id="@+id/cancerTypeLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_below="@id/zipCode"/>


            <Button
                android:id="@+id/signUpButton"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="25dp"
                android:textSize="25dp"
                android:textColor="#fff"
                android:layout_below="@id/cancerType"
                android:background="@drawable/sign_in_button"
                android:text="Sign in"
                android:layout_centerHorizontal="true"
                android:onClick="signUpClick"/>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/loadingAnimationContent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#cccccccc"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/animationLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>