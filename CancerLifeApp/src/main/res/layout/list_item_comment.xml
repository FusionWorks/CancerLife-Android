<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/comment"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/comment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@id/photo"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:background="@drawable/comment_cloud">
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="George Washington"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="can someone bring me dinner tonight..Omg I will die if .. bla bla bla"
                android:textSize="14sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2 weeks, 4 days ago"
                android:textSize="13sp"
                android:textColor="#8d9294"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>