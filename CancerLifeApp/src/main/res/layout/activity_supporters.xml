<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.platforms.menu.SlideHolder
        android:id="@+id/slideHolder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <include
            android:id="@+id/leftMenu"
            android:layout_width="match_parent"
            layout="@layout/menu" />

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <RelativeLayout
                android:id="@+id/topBar"
                android:layout_width="fill_parent"
                android:layout_height="55dp">
                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_logo"
                    android:text="menu"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:onClick="showMenu"/>
                <TextView
                    android:id="@+id/topBarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Supporters"
                    android:textColor="#2a9a11"
                    android:textSize="30sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottomButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                android:layout_alignParentBottom="true">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite supporter"
                    android:textColor="#fff"
                    android:textSize="23sp"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:onClick="inviteSupporterRequest"
                    android:background="@drawable/post_entry_button"/>
            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/topBar"
                android:layout_above="@+id/bottomButton"
                android:layout_margin="10dp">
                <LinearLayout
                    android:id="@+id/middleContent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>
            <RelativeLayout
                android:id="@+id/loadingAnimationContent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#cccccccc"
                android:visibility="gone">
                <ProgressBar
                    android:id="@+id/animationLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </com.platforms.menu.SlideHolder>

</RelativeLayout>